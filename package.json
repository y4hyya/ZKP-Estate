{
  "name": "zkp-estate",
  "version": "1.0.0",
  "description": "Zero-Knowledge Rent Protocol MVP using Noir ZK",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev:node": "hardhat node",
    "dev:deploy": "hardhat run scripts/deploy.ts --network localhost",
    "build": "hardhat compile",
    "test": "hardhat test && npm run test:circuits",
    "test:unit": "hardhat test test/unit/",
    "test:e2e": "hardhat test test/e2e/",
    "test:circuits": "cd circuits/eligibility && nargo test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "circuits:build": "cd circuits/eligibility && nargo compile",
    "circuits:prove": "cd circuits/eligibility && nargo prove",
    "circuits:verify": "cd circuits/eligibility && nargo verify",
    "scripts:deploy": "hardhat run scripts/deploy.ts",
    "scripts:createPolicy": "hardhat run scripts/createPolicy.ts",
    "scripts:prove": "hardhat run scripts/prove.ts",
    "scripts:submitZk": "hardhat run scripts/submitZk.ts",
    "scripts:startLease": "hardhat run scripts/startLease.ts",
    "scripts:confirm": "hardhat run scripts/confirm.ts",
    "scripts:refund": "hardhat run scripts/refund.ts",
    "wizard": "tsx scripts/input-wizard.ts",
    "typechain": "hardhat typechain",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean && rm -rf artifacts typechain-types"
  },
  "keywords": [
    "zkp",
    "zero-knowledge",
    "rent",
    "estate",
    "noir",
    "hardhat",
    "ethereum"
  ],
  "author": "ZKP-Estate Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ethers": "^6.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.0.0",
    "tsx": "^4.20.5",
    "typechain": "^8.3.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.0.0",
    "viem": "^1.19.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
